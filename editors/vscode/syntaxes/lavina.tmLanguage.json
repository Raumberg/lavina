{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Lavina",
  "scopeName": "source.lavina",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#storage" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#classes" },
    { "include": "#enums" },
    { "include": "#user-types" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "match": "//.*$",
      "name": "comment.line.double-slash.lavina"
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.lavina",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.lavina",
              "match": "\\\\."
            },
            {
              "name": "meta.embedded.expression.lavina",
              "begin": "\\$\\{",
              "end": "\\}",
              "beginCaptures": { "0": { "name": "punctuation.definition.interpolation.begin.lavina" } },
              "endCaptures": { "0": { "name": "punctuation.definition.interpolation.end.lavina" } },
              "patterns": [{ "include": "source.lavina" }]
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.lavina",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.lavina",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.lavina",
          "match": "\\b(if|elif|else|while|for|in|return|break|continue|match|try|catch|throw|import|as|pass)\\b"
        },
        {
          "name": "keyword.operator.logical.lavina",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "keyword.other.lavina",
          "match": "\\b(fn|constructor|public|private|static|inline|const|let|comptime|namespace|ref|own|cpp|extern|link|type)\\b"
        }
      ]
    },
    "storage": {
      "match": "\\b(class|struct|enum)\\b",
      "name": "storage.type.lavina"
    },
    "types": {
      "match": "\\b(int|float|string|bool|void|auto|dynamic|vector|hashmap|hashset|null|int8|int16|int32|int64|float32|float64|usize|cstring|ptr)\\b",
      "name": "support.type.lavina"
    },
    "constants": {
      "match": "\\b(true|false|null|this)\\b",
      "name": "constant.language.lavina"
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.lavina",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.assignment.lavina",
          "match": "\\+=|-=|\\*=|="
        },
        {
          "name": "keyword.operator.arithmetic.lavina",
          "match": "\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.logical.symbol.lavina",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.other.lavina",
          "match": "::|->|\\.\\."
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "comment": "Function definition: type fn name(...)",
          "match": "\\b(fn)\\s+([a-zA-Z_]\\w*)",
          "captures": {
            "1": { "name": "keyword.other.lavina" },
            "2": { "name": "entity.name.function.lavina" }
          }
        },
        {
          "comment": "Function call",
          "match": "\\b([a-zA-Z_]\\w*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.call.lavina" }
          }
        }
      ]
    },
    "classes": {
      "match": "\\b(class|struct)\\s+([A-Z]\\w*)",
      "captures": {
        "1": { "name": "storage.type.lavina" },
        "2": { "name": "entity.name.type.class.lavina" }
      }
    },
    "enums": {
      "match": "\\b(enum)\\s+([A-Z]\\w*)",
      "captures": {
        "1": { "name": "storage.type.lavina" },
        "2": { "name": "entity.name.type.enum.lavina" }
      }
    },
    "user-types": {
      "match": "\\b[A-Z][a-zA-Z0-9_]*\\b",
      "name": "entity.name.type.lavina"
    },
    "variables": {
      "match": "\\b[a-z_]\\w*\\b",
      "name": "variable.other.lavina"
    }
  }
}
