// ── Token struct ────────────────────────────────────────────────

class Token:
    constructor(string token_type, string lexeme, int line, int col):
        this.token_type = token_type
        this.lexeme = lexeme
        this.line = line
        this.col = col

    string fn to_string():
        return "${this.token_type}(${this.lexeme}) at ${this.line}:${this.col}"

// ── Keyword lookup ──────────────────────────────────────────────

